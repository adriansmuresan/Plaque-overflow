<form action='/questions/<%= @question.id %>' method='post'>
  <input type='hidden' name='_method' value='put'>
  <input type='text' name='title' value='<%= @question.try(:title) %>' required>
  <textarea name='content' required ><%= @question.try(:content) %></textarea>
  <input type='submit' value='edit'>
</form>
